<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.GameController">

    <children>
        <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.5" pickOnBounds="false" preserveRatio="false">
            <image>
                <Image url="@gameImage.gif" />
            </image>
            <effect>
                <ColorAdjust brightness="-0.12" />
            </effect>
        </ImageView>
    </children>

    <top>
        <VBox alignment="CENTER">
            <padding>
                <Insets bottom="10" top="10" />
            </padding>
            <Label prefHeight="42.0" prefWidth="206.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d27142; -fx-effect: dropshadow(gaussian, #1b1b1b, 2, 0, 0, 1);" text="      Connect 4 to win!" />
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="20">
            <!-- Game Board -->
            <GridPane fx:id="boardGrid" hgap="5" style="-fx-background-color: rgba(173, 216, 230, 0.7); -fx-background-radius: 10;" vgap="5" />

            <!-- Chat System -->
            <VBox alignment="TOP_CENTER" spacing="10">
                <ListView fx:id="listChat" prefHeight="251.0" prefWidth="210.0" style="-fx-background-radius: 10; -fx-background-color: rgba(255,255,255,0.7);" />
                <HBox spacing="5">
                    <TextField fx:id="chatField" promptText="Enter message..." style="-fx-background-radius: 8; -fx-background-color: white; -fx-opacity: 0.9;" HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleSendChat" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8;" text="Send" />
                </HBox>
            </VBox>
        </HBox>
    </center>

</BorderPane>

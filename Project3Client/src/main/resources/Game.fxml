<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400" prefWidth="600" style="-fx-background-color: #f3efef;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.GameController">

    <top>
        <VBox alignment="CENTER">
            <Label fx:id="turnLabel" prefHeight="42.0" prefWidth="206.0" style="-fx-font-weight: bold;" text="    Waiting for game start...">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" prefHeight="300.0" prefWidth="580.0" spacing="20">
            <!-- Game Board -->
            <GridPane fx:id="boardGrid" hgap="5" style="-fx-background-color: lightblue;" vgap="5" />

            <!-- Chat System -->
            <VBox alignment="TOP_CENTER" spacing="10">
                <ListView fx:id="listChat" prefHeight="251.0" prefWidth="210.0" />
                <HBox spacing="5">
                    <TextField fx:id="chatField" promptText="Enter message..." HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleSendChat" text="Send" />
                </HBox>
            </VBox>
        </HBox>
    </center>


    <bottom>
        <HBox alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="600.0" spacing="15" style="-fx-padding: 10;">
            <Button fx:id="returnMainButton" onAction="#handleReturnMain" text="Return to Main Menu" textFill="#f24747">
                <font>
                    <Font name="System Bold" size="12.800000190734863" />
                </font>
            </Button>
        </HBox>
    </bottom>

</BorderPane>

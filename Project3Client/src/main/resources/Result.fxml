<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ResultController"
      alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f1eeee;" prefHeight="400" prefWidth="600">

    <padding>
        <Insets top="40" left="20" right="20" bottom="20"/>
    </padding>

    <Label fx:id="resultLabel" text="Game ended" style="-fx-font-size: 24px; -fx-font-weight: bold;">
        <font>
            <Font name="Lucida Sans Typewriter Regular" size="14.0"/>
        </font>
    </Label>

    <Button fx:id="rematchButton" onAction="#handleRematch" text="Play again with Opponent" prefWidth="220" />

    <VBox spacing="10" alignment="CENTER">
        <Button fx:id="returnMainButton" onAction="#handleReturnMain" text="Return to Main Menu" prefWidth="180" />
    </VBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400" prefWidth="600" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MatchFoundController">

    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Match Found!">
                <font>
                    <Font name="Lucida Sans Typewriter Regular" size="12.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Matched with: (wait till server)" />
            <Button fx:id = "readyButton" onAction="#handleReady" prefWidth="150" text="Ready Up!">
                <font>
                    <Font name="System Bold" size="12.8" />
                </font>
            </Button>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button fx:id = "returnLobbyButton" onAction="#handleReturnLobby" text="Return to Lobby" textFill="#f44747">
            <font>
               <Font name="System Bold" size="12.800000190734863" />
            </font></Button>
            <Button fx:id = "returnMainButton" onAction="#handleReturnMain" text="Return to Main Menu" textFill="#f24747">
            <font>
               <Font name="System Bold" size="12.800000190734863" />
            </font></Button>
        </HBox>
    </bottom>

</BorderPane>

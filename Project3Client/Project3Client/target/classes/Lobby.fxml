<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400" prefWidth="600" style="-fx-background-color: #f1eeee;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LobbyController">

    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Welcome to the Lobby!">
            <font>
               <Font name="Lucida Sans Typewriter Regular" size="12.0" />
            </font></Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Button fx:id="joinButton" onAction="#handleJoin" prefWidth="150" text="Join a Random User">
            <font>
               <Font name="System Bold" size="12.800000190734863" />
            </font></Button>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Button fx:id="returnButton" onAction="#handleReturn" text="Return to Main Menu" textFill="#ea4545">
            <font>
               <Font name="System Bold" size="12.800000190734863" />
            </font></Button>
        </HBox>
    </bottom>

</BorderPane>
